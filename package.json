{
  "name": "beamer-tracer",
  "version": "1.0.0",
  "description": "Portable Foto-Anzeige zum Vorzeichnen mit Beamer",
  "author": "DFKI",
  "main": "src/main/main.js",
  "scripts": {
    "bundle": "esbuild src/renderer/main.js --bundle --outfile=dist/renderer.js --format=iife --platform=browser",
    "start": "npm run bundle && electron .",
    "build:win": "npm run bundle && electron-builder --win portable",
    "build:mac": "npm run bundle && electron-builder --mac dmg"
  },
  "build": {
    "appId": "com.beamer.tracer",
    "productName": "BeamerTracer",
    "portable": {
      "artifactName": "BeamerTracer-Portable.exe"
    },
    "win": {
      "target": "portable"
    },
    "mac": {
      "target": "dmg"
    },
    "files": [
      "src/**/*",
      "dist/renderer.js",
      "assets/**/*"
    ]
  },
  "devDependencies": {
    "electron": "^40.0.0",
    "electron-builder": "^26.0.0",
    "esbuild": "^0.27.3"
  }
}
